@using DOAN.Models;

@{
    ViewBag.Title = "ThayDoiTinhTrang";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    HOADON hoadon = ViewBag.HoaDon as HOADON;
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoHang")">Giao hang</a></li>
            <li class="breadcrumb-item active">Cap nhat tinh trang</li>
        </ol>
    </div>
}


@section script{
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });

    </script>
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Cập nhật tình trạng</h3>
                    </div>
                    @using (Html.BeginForm("ThayDoiTinhTrang", "GiaoHang", new { id = hoadon.IdHD }, FormMethod.Post))
                    {
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <tr>
                                                <th>
                                                    <span>Họ tên khách hàng</span>
                                                </th>
                                                <td>
                                                    <span>@hoadon.NGUOIDUNG.HoTen</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <span>Số điện thoại</span>
                                                </th>
                                                <td>
                                                    <span>@hoadon.SDT</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <span>Địa chỉ</span>
                                                </th>
                                                <td>
                                                    <span>@hoadon.DiaChi</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <span>Số tiền cần thanh toán</span>
                                                </th>
                                                <td>
                                                    <span>@hoadon.TongTien</span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <span>Tình trạng thanh toán</span>
                                                </th>
                                                <td>
                                                    @if (hoadon.DaThanhToan == true)
                                                    {
                                                        <span>Đã thanh toán</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Chưa thanh toán</span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <span>Tình trạng đơn hàng</span>
                                                </th>
                                                <td>
                                                    @Html.DropDownList("ddlTinhTrang", ViewBag.TinhTrang as SelectList, new { @class = "form-control" })
                                                </td>
                                            </tr>



                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info float-right">Lưu</button>
                        </div>
                    }
                        <!-- /.card-body -->
                    </div>
                <!-- /.card -->
            </div>

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

