
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/DetailLayout.cshtml";
    
}

<section class="blog-single section mb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-1 col-0"></div>
            <div class="col-lg-8 col-12">
                <div class="blog-single-main">
                    <div class="row">
                        <div class="col-12">
                            <div class="reply">
                                <div class="reply-head">
                                    @if (ViewBag.ThongBao != 0)
                                    {
                                        
                                        if (ViewBag.ThongBao == 1)
                                        {
                                            <div class="alert alert-warning">
                                                <strong>Cảnh báo!</strong> Tên đăng nhập, mật khẩu không đúng hoặc bạn chưa có tài khoản
                                            </div>
                                        }
                                    }
                                    <h2 class="reply-title">ĐĂNG NHẬP</h2>
                                    <!-- Comment Form -->
                                    @using (Html.BeginForm("DangNhap","Home",new {strURL=ViewBag.strURL}))
                                    {
                                        <div class="row">


                                            <div class="col-lg-12 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Email<span>*</span></label>
                                                    <input type="email" name="username" placeholder="" required="required">
                                                </div>
                                            </div>


                                            <div class="col-lg-12 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Mật khẩu<span>*</span></label>
                                                    <input type="password" name="password" placeholder="" required="required">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group button">
                                                    <button type="submit" class="btn">Đăng nhập</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <!-- End Comment Form -->
                                    <div class="blog-meta text-right">
                                        <span class="author float-right "><h3><a href="@Url.Action("QuenMatKhau","Home")">Quên mật khẩu?</a></h3></span>
                                        <span class="author float-right mr-2"><h3 ><a href="@Url.Action("DangKy","Home")">Chưa có tài khoản?</a></h3></span>
                                        
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

