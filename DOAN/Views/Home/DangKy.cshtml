@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/DetailLayout.cshtml";
}



<section class="blog-single section mb-50">
    <div class="container">
        <div class="row">
            <div class="col-lg-1 col-0"></div>
            <div class="col-lg-8 col-12">
                <div class="blog-single-main">
                    <div class="row">
                        <div class="col-12">
                            <div class="reply">
                                <div class="reply-head">
                                    @if (ViewBag.ThongBao != 0)
                                    {
                                        if (ViewBag.ThongBao == 1)
                                        {
                                            <div class="alert alert-success">
                                                <strong> Thành công! </strong> Tạo tài khoản thành công
                                            </div>
                                        }
                                        else if (ViewBag.ThongBao == 2)
                                        {
                                            <div class="alert alert-warning">
                                                <strong>Thất bại!</strong> Email bạn nhập đã được sử dụng. Vui lòng nhập email khác.
                                            </div>
                                        }
                                        else if (ViewBag.ThongBao == 3)
                                        {
                                            <div class="alert alert-warning">
                                                <strong>Error!</strong>Vui lòng nhập CAPTCHA.
                                            </div>
                                        }
                                        else if (ViewBag.ThongBao == 4)
                                        {
                                            <div class="alert alert-warning">
                                                <strong>Thất bại!</strong> Vui lòng kiểm tra lại thông tin
                                            </div>
                                        }

                                    }
                                    <h2 class="reply-title">ĐĂNG KÝ</h2>
                                    <!-- Comment Form -->
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Họ tên<span>*</span></label>
                                                    <input type="text" name="HoTen" placeholder="" required="required">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Giới tính<span>*</span></label><br />

                                                    <input style="width:50px" type="radio" name="GioiTinh" value=False checked>
                                                    <label for="male">Nam</label>
                                                    <input style="width:50px" type="radio" name="GioiTinh" value=True>
                                                    <label for="female">Nữ</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Ngày sinh<span>*</span></label>
                                                    <input type="date" name="NgaySinh" placeholder="" required="required">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Số điện thoại<span>*</span></label>
                                                    <input type="text" name="SDT" placeholder="" required="required">
                                                    @Html.ValidationMessage("SDT")
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Email<span>*</span></label>
                                                    <input type="email" name="Mail" placeholder="" required="required">
                                                    @Html.ValidationMessage("Mail")
                                                </div>
                                            </div>

                                            <div class="col-lg-12 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Địa chỉ<span>*</span></label>
                                                    <input type="text" name="DiaChi" placeholder="" required="required">
                                                    @Html.ValidationMessage("DiaChi")
                                                </div>
                                            </div>


                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Mật khẩu<span>*</span></label>
                                                    <input type="password" name="Password" placeholder="" required="required">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    <label>Nhập lại mật khẩu<span>*</span></label>
                                                    <input type="password" name="Password1" placeholder="" required="required">
                                                    @Html.ValidationMessage("Password1")
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <div class="form-group">
                                                    @Html.Captcha(5)
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group button">
                                                    <button type="submit" class="btn">Tạo tài khoản</button>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                    <div class="blog-meta mt-3 text-right mr-3">
                                        <span class="author" style="color:darkgray">Bạn đã có tài khoản?<a href="@Url.Action("DangNhap","Home") " class="ml-2" style="color: #EB395F">Đăng nhập</a></span>
                                    </div>
                                    <!-- End Comment Form -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


