@using DOAN.Models;
@model KHUYENMAI
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QLKhuyenMai")">Khuyen mai</a></li>
            <li class="breadcrumb-item active">Chinh sua</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Chỉnh sửa</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("Edit", "QLKhuyenMai", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model=>model.IdMa)
                            @Html.HiddenFor(model=>model.TinhTrang)

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaKM, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.MaKM, new { @type = "text", @class = "form-control", @id = "inputName", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.MaKM, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.LoaiKM)
                                @Html.DropDownList("LoaiKM", ViewBag.LoaiKM as SelectList, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoaiKM, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayBD, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.NgayBD, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                @Html.ValidationMessageFor(model => model.NgayBD, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayKT, htmlAttributes: new { @for = "inputBD" })
                                @Html.TextBoxFor(model => model.NgayKT, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputBD" })
                                @Html.ValidationMessageFor(model => model.NgayKT, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GiaTri, htmlAttributes: new { @for = "inputName" })
                                @Html.TextBoxFor(model => model.GiaTri, new { @type = "number", @class = "form-control", @id = "inputName", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.GiaTri, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.ChiTiet, htmlAttributes: new { @for = "inputName" })
                                @Html.TextAreaFor(model => model.ChiTiet, new { @class = "form-control", @rows = "16", @placeholder = "Enter ..." })
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
