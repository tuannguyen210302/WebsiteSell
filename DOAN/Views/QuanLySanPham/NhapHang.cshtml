@using DOAN.Models;
@model NHAPHANG

@{
    ViewBag.Title = "NhapHang";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@section header{
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Trang chu</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index","QuanLySanPham")">San pham</a></li>
            <li class="breadcrumb-item active">Nhap hang</li>
        </ol>
    </div>
}

@section script{
    <script type="text/javascript">
        
    </script>

}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <!-- left column -->
            <div class="col-md-10">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Nhập hàng</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("NhapHang", "QuanLySanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdSP)
                            <div class="form-group">

                                @Html.Label("Tên sản phẩm", htmlAttributes: new { @for = "inputName" })
                                <input type = "text" class = "form-control" id = "inputName" placeholder = "Name" autofocus = "autofocus" readonly value="@ViewBag.TenSP" />
                                
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayNhap, htmlAttributes: new { @for = "inputNN" })
                                @Html.TextBoxFor(model => model.NgayNhap, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @id = "inputNN", @readonly=true })
                                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @for = "inputAddress" })
                                @Html.TextBoxFor(model => model.SoLuong, new { @type = "text", @class = "form-control", @id = "inputAddress" })
                                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GiaNhap, htmlAttributes: new { @for = "inputAddress" })
                                @Html.TextBoxFor(model => model.GiaNhap, new { @type = "text", @class = "form-control", @id = "inputAddress"})
                                @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right">Lưu</button>
                        </div>
                    }
                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

